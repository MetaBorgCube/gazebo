module llmc

imports

    llmc/Common
    llmc/Body
    llmc/Type
    llmc/Path

context-free start-symbols

    Function-LL

context-free sorts Function-LL
context-free syntax

    Function-LL.Function-LL = <
        function <NSID-LL>

        <Global-LL>

        <Sign-LL>

        <Local-LL>

        <Body-LL>
    >

context-free sorts Global-LL Sign-LL Local-LL
context-free syntax

    Global-LL.Global-LL = <
        global
            <{Decl-LL "\n"}*>
    >
    Sign-LL.Sign-LL = <
        sign
            <{Decl-LL "\n"}*>
    >
    Local-LL.Local-LL = <
        local
            <{Decl-LL "\n"}*>
    >

context-free sorts Decl-LL StorageLocation-LL
context-free syntax

    Decl-LL.DeclAuto-LL = <<Modifier-LL*> <ID> <Type-LL> <StorageLocation-LL>>
    StorageLocation-LL.StorageLocationAuto-LL = <>
    StorageLocation-LL.StorageLocationData = <= data <NSID-LL> <Path-LL>>
