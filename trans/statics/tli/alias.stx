module statics/tli/alias

imports

    statics/common
    statics/expr/selector
    statics/bind/alias

rules

    aliasOk : scope * Alias

    aliasOk(s, Alias(dst@Selector(name, dstProps), src)) :- {T s_sel}
        dstProps == [] | error $[destination must not have any properties]@dstProps,
        // TODO: ensure compile-time computation computability of srcProps
        typeOfSelector(s, src) == T,
        T == SELECTOR(s_sel),
        declareAlias(s, name, s_sel).
