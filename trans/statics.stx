module statics

// see README.md for details on how to switch to multi-file analysis

imports

    statics/common
    statics/use
    statics/tli

rules // single-file entry point

    programOk : Start

    programOk(Start(u, t)) :- {s}
        new s,
        usesOk(s, u),
        tlisOk(s, t).

rules // multi-file entry point

    projectOk : scope

    projectOk(s).

    fileOk : scope * Start

    fileOk(s, start) :-
        // TODO: link scope
        programOk(start).
